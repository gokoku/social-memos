<div class="grid grid-cols-2 md:grid-cols-4 gap-1">
<% @users.each do |user| %>
  <div class="px-4 py-4 shadow-lg shadow-gray-300 round-2xl">
    <div class="h-10 mb-8 flex justify-between">
      <%= link_to gravatar_for(user), user, class: "m-auto" %>
      <% if user != current_user %>
        <%= link_to "#{octicon :trash, height: 24, class: 'right left', fill: '#ff3090'}".html_safe,
            user, data: { turbo_method: :delete, turbo_confirm: "You sure?"}, class: "hover:bg-red-300" %>
      <% end %>
    </div>
    <div class="items-center py-3 mx-3">
      <h3 class="text-left text-normal font-semibold tracking-tight text-gray-900"><%= user.name %></h3>
      <p class="text-left text-sm font-normal tracking-tight text-gray-900"><%= user.email %></p>
    </div>
  </div>
<% end %>
</div>

<div class="mt-10">
  <%= will_paginate @users %>
</div>