<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="bg-red-100 p-10 mb-2 rounded-lg">
      入力エラーが <%= @user.errors.count%> 個あります。
    </div>
    <ul class="text-red-400">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
