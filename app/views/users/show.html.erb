<div class="flex items-center gap-x-6">
  <%= gravatar_for @user %>
  <div>
    <h3 class="text-base font-semibold leading-7 tracking-tight text-gray-900"><%= @user.name %></h3>
    <p class="text-sm font-semibold leading-6 text-indigo-600">email</p>
    <p class="text-sm leading-6"><%= @user.email%></p>
  </div>
</div>
<hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-300">
<div class="">
  <% if @user.microposts.any? %>
    <h3 class=" mb-5 text-base font-semibold text-gray-400">Microposts (<%= @user.microposts.count %>)</h3>

    <ul class="grid grid-cols-2 md:grid-cols-4 gap-1">
      <%= render @microposts %>
    </ul>
    <div class="mt-10">
      <%= will_paginate @microposts %>
    </div>
  <% end %>
</div>